   }

   label
   {
     color               : #111111;
   }

   div.warning
   {
     color               : #ff0000;
     margin              : 1em   0em   1em   0em;
   }

   hr.footer
   {
     color               : #333333;

     height              : 1px;
   }

   div.package_info
   {
     font-weight         : bold;
     color               : #333399;

     text-align          : right;
     margin              : 0em   0em 0.1em   0em;
   }

   div.footer
   {
     font-family         : "Century Gothic", sans-serif;
     color               : #333333;

     text-align          : right;
     margin              : 0em   0em 0.1em   0em;
