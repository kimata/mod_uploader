 <body>

  <div class="title">admin tool for mod_uploader</div>

  <h1>File List</h1>

  <div class="description">
    Total $TOTAL_FILE_SIZE, $TOTAL_FILE_NUMBER files are available.
    [<a href="javascript:location.reload(true)"><em>Reload</em></a>]
  </div>

  <div class="page_info">
   <!--@
   print "Page: ";
   i = 0;
   while (i++ < PAGE_COUNT) {
       if (i == CURRENT_PAGE) {
           print "[ <em>", i, "</em> ]";
       } else {
           print "[<a href=\"", BASE_URL, "/admin/index/", i, "\">", i, "</a>]";
       }
   }
   @-->
  </div>

  <table class="file">
   <tr>
    <th class="index">NO</th>
    <th class="name">NAME</th>
    <th class="download"></th>
    <th class="comment">COMMENT</th>
    <th class="size">SIZE</th>
    <th class="date">DATE</th>
    <th class="download_count">COUNT</th>
    <th class="ip_address">IP ADDRESS</th>
    <th class="remove"></th>
   </tr>
<!--@ foreach (item in ITEM_LIST) { @-->
   <tr>
    <td class="index">${item.index}</td>
    <td class="name"><a href="${BASE_URL}/admin/download/${item.id}.${item.file_ext}">${item.file_name}</a></td>
    <td class="download">
     <a href="${BASE_URL}/admin/download/${item.id}.${item.file_ext}/attatch">DL</a>
    </td>
    <td class="comment">${item.comment}</td>
    <td onclick="alert('MD5: ${item.file_digest}')" class="size">${item.file_size}</td>
    <td class="date">${item.date}</td>
    <td class="download_count">${item.download_count}</td>
    <td class="ip_address"><a href="http://whois.ansi.co.jp/?key=${item.ip_address}">${item.ip_address}</a></td>
    <td class="remove">
     <form method="post" enctype="multipart/form-data" action="${BASE_URL}/admin/remove/">
      <input type="hidden" name="remove_pass" value="" />
      <input type="hidden" name="id" value="${item.id}" />
      <input type="submit" name="submit" value="Remove" />
     </form>
    </td>
   </tr>
<!--@ } @-->
  </table>

  <div class="page_info">
   <!--@
   print "Page: ";
   i = 0;
   while (i++ < PAGE_COUNT) {
       if (i == CURRENT_PAGE) {
           print "[ <em>", i, "</em> ]";
       } else {
           print "[<a href=\"", BASE_URL, "/admin/index/", i, "\">", i, "</a>]";
       }
   }
   @-->
  </div>

  <hr class="footer" />

  <div class="footer">
   Copyright(C) 2006 acapulco.dyndns.org
  </div>

  <div class="package_info">
   <a href="http://acapulco.dyndns.org/mod_uploader/">@PACKAGE_NAME@/@PACKAGE_VERSION@ is Free!</a>
  </div>

 </body>

</html>
